<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/black"> <!-- 보통 layout_height 60dp 정도로 설정 -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="하루 10분 프로젝트"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:visibility="gone"
        android:layout_gravity="center"/> <!--FrameLayout은 gravity 속성 없으므로 layout_gravity로 TextView 자체의 위치를 설정-->

    <ImageView
        android:layout_width="70dp"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:src="@drawable/company_logo"/>

    <ImageView
        android:id="@+id/notificationImg"
        android:visibility="gone"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="5dp"
        android:src="@drawable/noti_icon"
        android:layout_gravity="right|center_vertical"
        android:layout_marginRight="10dp"/>  <!-- 터치 영역은 그대로면서 그림이미지는 작게 보여주고 싶을 때 내부 padding을 주자-->

</FrameLayout>